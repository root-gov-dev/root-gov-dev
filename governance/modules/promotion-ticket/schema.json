{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/promotion-ticket.schema.json",
  "title": "Promotion Ticket",
  "description": "Control-plane contract for promotion workflow: lifecycle, approvals, evidence, and policy references.",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "version", "owner", "lifecycle", "approvals", "evidence"],
  "properties": {
    "type": {
      "type": "string",
      "const": "promotion-ticket",
      "description": "Type discriminator for contract clarity."
    },
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_.\\-]{1,63}$",
      "description": "Stable identifier of the ticket."
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$",
      "description": "Semantic version (SemVer)."
    },
    "owner": {
      "type": "string",
      "minLength": 1,
      "description": "Owner name or email."
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Free-form labels, annotations."
    },
    "policy_refs": {
      "type": "array",
      "description": "References to OPA/Kyverno policies or IDs.",
      "items": { "type": "string", "minLength": 1 }
    },
    "lifecycle": {
      "type": "object",
      "additionalProperties": false,
      "required": ["states", "allowed_transitions", "current_stage"],
      "properties": {
        "states": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "allowed_transitions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["from", "to", "by", "requires"],
            "properties": {
              "from": { "type": "string", "minLength": 1 },
              "to": { "type": "string", "minLength": 1 },
              "by": { "type": "string", "minLength": 1 },
              "requires": {
                "type": "array",
                "minItems": 0,
                "items": {
                  "type": "string",
                  "enum": ["policy-gate-passed", "sbom-validated", "exception-approved"]
                }
              }
            }
          }
        },
        "current_stage": {
          "type": "string",
          "minLength": 1,
          "description": "Current lifecycle stage (should belong to states)."
        }
      }
    },
    "approvals": {
      "type": "object",
      "additionalProperties": false,
      "required": ["required", "strategy", "timeout"],
      "properties": {
        "required": { "type": "integer", "minimum": 1 },
        "strategy": { "type": "string", "enum": ["all-must-approve", "any-can-approve"] },
        "timeout": { "type": "string", "pattern": "^[1-9][0-9]*h$" },
        "escalation": {
          "type": "object",
          "additionalProperties": false,
          "required": ["enabled"],
          "properties": {
            "enabled": { "type": "boolean" },
            "escalate_to": {
              "type": "array",
              "items": { "type": "string", "minLength": 3 }
            },
            "after_hours": { "type": "integer", "minimum": 1 }
          }
        }
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sbom_uri", "attestation_uri", "provenance_uri"],
      "properties": {
        "sbom_uri": { "type": "string", "minLength": 3 },
        "attestation_uri": { "type": "string", "minLength": 3 },
        "provenance_uri": { "type": "string", "minLength": 3 },
        "signatures": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["signer"],
            "properties": {
              "signer": { "type": "string", "minLength": 3 },
              "transparency_log": { "type": "string", "minLength": 3 }
            }
          }
        }
      }
    }
  }
}
